<div class="container">
  <h1>Welcome to our anonymous blog!</h1>
  <p>Select a post here or select by tag...</p>
  <h3>Or create your own post <a href="/create">here.</a></h3>

  <h2>Tags</h2>
  <% @tags.each do |tag| %>
  <li>
    <a href=<%="/tag/#{tag.id}"%>>
      <%= tag.title %>
    </a>
  </li>
  <% end %>

  <h2>Posts</h2>
  <% @posts.each do |post| %>
  <li>
    <a href=<%="/post/#{post.id}"%>>
      <%= post.title %>
    </a>
  </li>
  <% end %>

</div>
